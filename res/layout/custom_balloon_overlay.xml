<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/balloon_main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/balloon_overlay_bg_selector"
    android:minWidth="150dip"
    android:orientation="horizontal"
    android:paddingRight="0dip"
    android:paddingTop="0dip" >

    <LinearLayout
        android:id="@id/balloon_inner_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/balloon_item_image"
            android:layout_width="45dip"
            android:layout_height="40dip"
            android:layout_gravity="center_horizontal|center_vertical"
            android:paddingRight="10dip"
            android:paddingTop="10dip" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="10dip" >

            <TextView
                android:id="@+id/balloon_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/balloon_item_snippet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12dip" />

            <TextView
                android:id="@+id/balloon_storeId_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gjghjghj"
                android:textColor="@color/black"
                android:textSize="15dip" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/balloon_details"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:layout_gravity="center_horizontal|center_vertical" />

</LinearLayout>
