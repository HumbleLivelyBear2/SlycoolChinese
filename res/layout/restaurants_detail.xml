<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativedetail"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background" >

    <RelativeLayout
        android:id="@+id/headerview_realtiveLay"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/banner1" >

		<TextView android:id="@+id/textview_store_title"
		    android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:gravity="center"
        	android:text="店家名"
        	android:textColor="#FFFFFF"
		    />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerview_realtiveLay"
        android:layout_marginBottom="10dip" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:id="@+id/imagelogo_LiLay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dip" >

                <ImageView
                    android:id="@+id/restra_logo_ImageView"
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="8dip" 
                    android:layout_gravity="center_horizontal"
                    />
                <!-- <Button 
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="72dp"
                    android:text="士"/> -->
            </FrameLayout>

            <LinearLayout
                android:id="@+id/textInfo_Lilay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagelogo_LiLay"
                android:layout_margin="8dip"
                android:background="@drawable/discounttxtbg"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/address_ReLay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/addressLabel_LIlay"
                        android:layout_width="275dip"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dip"
                        android:layout_marginTop="8dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/addressLabel_TxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="@string/address_label"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/address_TxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dip"
                            android:layout_marginLeft="5dip"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/redirect_toMap"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="8dip"
                        android:layout_marginTop="8dip"
                        android:background="@drawable/redirectbutton" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#ff9933"
                    android:paddingBottom="3dip"
                    android:paddingTop="3dip" />

                <RelativeLayout
                    android:id="@+id/phone_ReLay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/phoneLabel_LIlay"
                        android:layout_width="275dip"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dip"
                        android:layout_marginTop="8dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/phoneLabel_TxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="@string/phone_no_label"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/phone_TxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/redirect_Call"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="8dip"
                        android:layout_marginTop="8dip"
                        android:background="@drawable/redirectbutton" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#ff9933" />

                <RelativeLayout
                    android:id="@+id/openCloseTime_ReLay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:layout_marginTop="8dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/openClose_LIlay"
                        android:layout_width="275dip"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/openCloseTimeLabel_TxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="@string/opentime_label"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/openClosetime_TxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </RelativeLayout>
                
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#ff9933" />
                    
                <RelativeLayout
                    android:id="@+id/coupon_Relay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:layout_marginTop="8dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/coupon_LIlay"
                        android:layout_width="275dip"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/couponLabel_TxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="特約優惠: "
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/coupon_TxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:textColor="@color/black"
                            android:textSize="16sp" 
                            android:text="見下方"/>
                    </LinearLayout>
                </RelativeLayout>
                
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#ff9933" />
                    
                <RelativeLayout
                    android:id="@+id/experience_Relay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:layout_marginTop="8dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/experience_LIlay"
                        android:layout_width="275dip"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/experienceLabel_TxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="會員評比: "
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                         <Button
                            android:id="@+id/button_fb_like"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/button_fb_like"
                            />
                    </LinearLayout>
                </RelativeLayout>
                
               <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#ff9933" />
                    
                <RelativeLayout
                    android:id="@+id/parttime_Relay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:layout_marginTop="8dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/parttime_LIlay"
                        android:layout_width="275dip"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/parttimeLabel_TxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="打工專區: "
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/button_parttime"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/button_parttime"
                            />
                    </LinearLayout>
                </RelativeLayout>     
                    
                    
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#ff9933" />
                    
                <RelativeLayout
                    android:id="@+id/checkin_Relay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:layout_marginTop="8dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/checkin_LIlay"
                        android:layout_width="275dip"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/checkinLabel_TxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="fb拍照打卡: "
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/fb_checkin_button"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/button_fb_checkin"
                            />
                    </LinearLayout>
                </RelativeLayout>
                
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#ff9933" />             

                <RelativeLayout
                    android:id="@+id/menuLilay"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" >

                    <ImageButton
                        android:id="@+id/menu_ImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="15dip"
                        android:layout_marginBottom="8dip"
                        android:layout_marginTop="8dip"
                        android:background="@drawable/menu" />
                </RelativeLayout>
            </LinearLayout>
			
            <!-- 這裡要改成webview 實際專區 -->
            <LinearLayout
                android:id="@+id/galleryLiLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textInfo_Lilay"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dip"
                 android:layout_marginRight="8dip"
                android:background="@color/black"
                android:orientation="vertical" >

                <WebView android:id="@+id/experienceWeb"   
				   android:layout_width="280dp"   
				   android:layout_height="340dp"
				   android:visibility="gone"
			   		/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_ins"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_below="@id/galleryLiLay"
                android:layout_marginTop="3dip" >

                <TextView
                    android:id="@+id/StoreInfo_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="8dip"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/linear_discountbtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_ins"
                android:layout_margin="15dip"
                android:background="@drawable/discounttxtbg" >

                <TextView
                    android:id="@+id/discount_TxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="16sp" >
                </TextView>

                <ImageButton
                    android:id="@+id/redirect_AboutUs"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_alignRight="@+id/discount_TxtView"
                    android:layout_centerVertical="true"
                    android:background="@drawable/redirectbutton" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>